<!-- Page Header -->
<header class="masthead" style="background-image: url('/img/article.jpg')">
  <div class="overlay"></div>
  <div class="container">
    <div class="row">
      <div class="col-lg-8 col-md-10 mx-auto">
        <div class="site-heading">
          <h1><%= @article.title %></h1>
          <span class="subheading">Edit this article</span>
        </div>
      </div>
    </div>
  </div>
</header>

<!-- Main Content -->
<div class="container">
  <div class="row">
    <div class="col-lg-8 col-md-10 mx-auto">
      <%= render 'shared/errors', obj: @article %>
      <%= render 'form' %>
    </div>
  </div>
</div>